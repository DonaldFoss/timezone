sizes=$(
printf "as is              %5.2fk %5d\n" $(echo "$(cat forward.js | wc -c) / 1024" | bc -l) $(cat forward.js | wc -c)
printf "zipped             %5.2fk %5d\n" $(echo "$(cat forward.js | gzip -c  | wc -c) / 1024" | bc -l) $(cat forward.js | gzip -c  | wc -c)
printf "minifed            %5.2fk %5d\n" $(echo "$(cat forward.js | uglifyjs | wc -c) / 1024" | bc -l) $(cat forward.js | uglifyjs | wc -c)
printf "minifed and zipped %5.2fk %5d\n" $(echo "$(cat forward.js | uglifyjs | gzip -c | wc -c) / 1024" | bc -l) $(cat forward.js | uglifyjs | gzip -c | wc -c)
)
echo "$sizes"
